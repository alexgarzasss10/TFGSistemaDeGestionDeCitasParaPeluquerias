<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#0B1220</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Sidebar -->
    <Color x:Key="SidebarBg">#22313F</Color>
    <Color x:Key="SidebarBg2">#1F2A36</Color>
    <Color x:Key="SidebarAccent">#27C9A6</Color>
    <Color x:Key="SidebarIconBg">#294556</Color>
    <Color x:Key="SidebarText">#E7EEF5</Color>
    <Color x:Key="SidebarMuted">#9FB0BF</Color>
    <Color x:Key="SidebarItem">#2B3D4D</Color>
    <Color x:Key="SidebarItemHover">#2C3E50</Color>

    <SolidColorBrush x:Key="SidebarBgBrush" Color="{StaticResource SidebarBg}" />
    <SolidColorBrush x:Key="SidebarBg2Brush" Color="{StaticResource SidebarBg2}" />
    <SolidColorBrush x:Key="SidebarAccentBrush" Color="{StaticResource SidebarAccent}" />
    <SolidColorBrush x:Key="SidebarIconBgBrush" Color="{StaticResource SidebarIconBg}" />
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarText}" />
    <SolidColorBrush x:Key="SidebarMutedBrush" Color="{StaticResource SidebarMuted}" />
    <SolidColorBrush x:Key="SidebarItemBrush" Color="{StaticResource SidebarItem}" />
    <SolidColorBrush x:Key="SidebarItemHoverBrush" Color="{StaticResource SidebarItemHover}" />

    <!-- Paleta general -->
    <Color x:Key="Accent">#27C9A6</Color>
    <Color x:Key="Surface">#F3F4F6</Color>
    <Color x:Key="SurfaceAlt">#F9FAFB</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardBorder">#E5E7EB</Color>

    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>

    <!-- Colores usados por ServicesPage -->
    <Color x:Key="ErrorAlertBg">#FFF4F4</Color>
    <Color x:Key="ErrorAlertBorder">#F5C2C7</Color>
    <Color x:Key="ErrorAlertText">#B42318</Color>

    <Color x:Key="ServiceIconBgLight">#E6F4EA</Color>
    <Color x:Key="ServiceIconAccent">#16A34A</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource SurfaceAlt}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorder}"/>

    <!-- Brushes para ítems seleccionables (barberos) -->
    <SolidColorBrush x:Key="BarberItemBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="BarberItemStrokeBrush" Color="{StaticResource CardBorder}"/>
    <SolidColorBrush x:Key="BarberItemHoverBackgroundBrush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="BarberItemHoverStrokeBrush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="BarberItemSelectedBackgroundBrush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="BarberItemSelectedStrokeBrush" Color="{StaticResource Gray300}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#22C55E"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>

    <!-- Brushes para estado hover/pressed del accent (horas) -->
    <Color x:Key="AccentHover">#1A27C9A6</Color> <!-- ~10% opacidad sobre el accent -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHover}"/>
    <SolidColorBrush x:Key="AccentStrokeHoverBrush" Color="{StaticResource AccentHover}"/>

    <!-- NUEVO: colores del gradiente del héroe (referenciados, no hex inline) -->
    <Color x:Key="HeroOverlayTop">#00000000</Color>
    <Color x:Key="HeroOverlayMid">#66000000</Color>
    <Color x:Key="HeroOverlayBottom">#CC000000</Color>

</ResourceDictionary>