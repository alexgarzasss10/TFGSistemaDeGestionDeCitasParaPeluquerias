<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Tipografías -->
    <Style x:Key="SidebarTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource SidebarText}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="SidebarSubtitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource SidebarMuted}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="SidebarTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource SidebarText}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="SidebarMutedTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource SidebarMuted}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Ítem del flyout: sin fondo propio (evita doble recuadro) -->
    <Style x:Key="FlyoutItemContainerStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <!-- Icono tipográfico sobrio con Fluent -->
    <Style x:Key="IconGlyphStyle" TargetType="Label">
      <Setter Property="FontFamily" Value="{DynamicResource FluentIconFontFamily}" />
      <Setter Property="FontSize" Value="18" />
      <Setter Property="TextColor" Value="{DynamicResource SidebarText}" />
      <Setter Property="Opacity" Value="0.92" />
      <Setter Property="HorizontalOptions" Value="Center" />
      <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>
