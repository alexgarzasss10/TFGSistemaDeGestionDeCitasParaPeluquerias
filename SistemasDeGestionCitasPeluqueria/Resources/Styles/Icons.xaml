<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Familia de iconos (WinUI usa Segoe Fluent Icons; en Android/iOS necesitas empaquetar una fuente compatible) -->
    <OnPlatform x:Key="FluentIconFontFamily" x:TypeArguments="x:String">
        <On Platform="WinUI" Value="Segoe Fluent Icons" />
        <On Platform="Android" Value="FluentIcons" />
        <On Platform="iOS" Value="FluentIcons" />
        <On Platform="MacCatalyst" Value="FluentIcons" />
    </OnPlatform>

    <!-- Alias para compatibilidad con tu referencia SymbolThemeFontFamily -->
    <OnPlatform x:Key="SymbolThemeFontFamily" x:TypeArguments="x:String">
        <On Platform="WinUI" Value="Segoe Fluent Icons" />
        <On Platform="Android" Value="FluentIcons" />
        <On Platform="iOS" Value="FluentIcons" />
        <On Platform="MacCatalyst" Value="FluentIcons" />
    </OnPlatform>

    <!-- Glifos existentes -->
    <x:String x:Key="IconGlyph.Home">&#xEA8A;</x:String>
    <x:String x:Key="IconGlyph.Services">&#xE8C6;</x:String>
