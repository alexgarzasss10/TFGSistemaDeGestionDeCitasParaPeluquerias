<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SistemasDeGestionCitasPeluqueria.PageModels"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             xmlns:models="clr-namespace:SistemasDeGestionCitasPeluqueria.Models"
             xmlns:conv="clr-namespace:SistemasDeGestionCitasPeluqueria.Converters"
             x:Class="SistemasDeGestionCitasPeluqueria.Pages.ServicesPage"
             x:DataType="vm:ServicesPageModel"
             x:Name="Root"
             Title="Servicios"
             BackgroundColor="{DynamicResource Surface}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:DurationMinutesToTextConverter x:Key="DurationConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <VerticalStackLayout Spacing="4">
                <Label Text="Servicios"
                       TextColor="{DynamicResource TextPrimary}"
                       FontSize="28"
                       FontAttributes="Bold" />
                <Label Text="Descubre todos nuestros servicios profesionales"
                       TextColor="{DynamicResource TextSecondary}" />
            </VerticalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!-- Rejilla de tarjetas -->
            <CollectionView ItemsSource="{Binding Services}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="{OnIdiom Phone=1, Tablet=2, Desktop=3}" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <Label Text="No hay servicios disponibles."
                           TextColor="{DynamicResource TextSecondary}" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ServiceOffering">
                        <Frame Style="{StaticResource CardFrameStyle}" Padding="16" Margin="6" HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                <!-- Icono -->
                                <Border Grid.Row="0" Grid.Column="0"
                                        BackgroundColor="{StaticResource ServiceIconBgLight}" Padding="8"
                                        HorizontalOptions="Start" VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <shapes:RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Label FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           Text="{StaticResource IconGlyph.Scissors}"
                                           TextColor="{StaticResource ServiceIconAccent}" />
                                </Border>

                                <!-- Precio chip -->
                                <Border Grid.Row="0" Grid.Column="1"
                                        BackgroundColor="{DynamicResource Accent}"
                                        Padding="8,6"
                                        HorizontalOptions="End" VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <shapes:RoundRectangle CornerRadius="14" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Price, StringFormat='{}{0:C}'}"
                                           TextColor="{StaticResource White}" FontAttributes="Bold" />
                                </Border>
    
                                <!-- Nombre -->
                                <Label Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="{Binding Name}"
                                       TextColor="{DynamicResource TextPrimary}"
                                       Margin="0,10,0,0"
                                       FontAttributes="Bold" FontSize="18" />

                                <!-- Descripción -->
                                <Label Grid.Row="2" Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       TextColor="{DynamicResource TextSecondary}" />

                                <!-- Duración + botón -->
                                <Grid Grid.Row="3" Grid.ColumnSpan="2"
                                      ColumnDefinitions="Auto,*,Auto"
                                      Margin="0,12,0,0">
                                    <Label Grid.Column="0"
                                           Text="{Binding DurationMinutes, Converter={StaticResource DurationConverter}}"
                                           TextColor="{DynamicResource TextSecondary}" />
                                    <Label Grid.Column="1" />
                                    <Button Grid.Column="2"
                                            Style="{StaticResource PrimaryButton}"
                                            Text="Reservar"
                                            Command="{Binding Source={x:Reference Root}, Path=BindingContext.ReserveCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>