<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemasDeGestionCitasPeluqueria.Pages.BookingPage"
             Title="Reserva">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Reserva de servicio" FontSize="22" FontAttributes="Bold" />
        <Label Text="{Binding ServiceName}" />
        <Label Text="{Binding Price, StringFormat='Precio: {0:C}'}" />
        <Label Text="{Binding DurationMinutes, StringFormat='Duración: {0} min'}" />
        <Label Text="(Aquí irá el flujo de selección de barbero, fecha y confirmación)" 
               TextColor="Gray" FontSize="12"/>
    </VerticalStackLayout>
</ContentPage>